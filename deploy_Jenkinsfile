  
pipeline {
    agent { label 'theatre' }

parameters{
        string(description: 'version of build image for backend', name: 'TAG_BACK')
          }
    stages {
        stage('PULL IMAGE FROM REGISTRY') {
            steps {
                sh 'docker pull registry.hiriko.local:5000/back:${TAG_BACK}'
            }
        }
        // stage('Get docker-compose file'){
        //     steps{
        //         //
        //     }
        // }
        stage('BUILD IMAGES') {
            steps {
                sh "docker-compose -f deploy.yml build"
            }
        }
        stage('STOP RUNNING CONTAINERS') {
            steps {
                sh 'docker container rm -f backend'
                sh 'docker container rm -f db_postgre'
            }
        }
        stage('RUN SERVICES') {
            steps {
                sh 'docker-compose -f deploy.yml up -d'
            }
        }
        // stage('TEST IF SERVICE IS RUNNING') {
        //     steps {
        //         sh 'sleep 90'
        //         sh '/root/config/check_script_deploy.sh'
        //     }
        // }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}